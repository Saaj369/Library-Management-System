<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchResultActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/bookFoundStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="23sp"
            android:text="TextView"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/bookFoundTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="23sp"
            android:text="TextView"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/bookfoundAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="23sp"
            android:text="TextView"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/searchAcitivityBorrowButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="borrowFoundBook"
                android:text="Borrow"
                android:visibility="visible" />

            <Button
                android:id="@+id/searchAcitivityReturnButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="returnFoundBook"
                android:text="Return" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>